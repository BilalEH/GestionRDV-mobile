<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GestionRDV_Medical" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.GestionRDV_Medical" parent="Base.Theme.GestionRDV_Medical" />

    <!-- Thème de base -->
    <style name="Base.Theme.GestionRDV" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Couleurs principales -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_blue_dark</item>
        <item name="colorAccent">@color/accent_green</item>

        <!-- Couleurs système -->
        <item name="android:statusBarColor">@color/primary_blue_dark</item>
        <item name="android:navigationBarColor">@color/primary_blue_dark</item>

        <!-- Fond / texte -->
        <item name="android:colorBackground">@color/background_white</item>
        <item name="android:textColor">@color/text_dark</item>

        <!-- Utiliser Material Design -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
    </style>

    <!-- Thème final -->
    <style name="Theme.GestionRDV" parent="Base.Theme.GestionRDV" />

    <!-- Style des boutons -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/primary_blue</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">30dp</item>
    </style>
        <!-- Base application theme. -->
        <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
            <!-- Customize your theme here. -->
            <item name="colorPrimary">@color/colorPrimary</item>
            <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
            <item name="colorAccent">@color/colorAccent</item>
        </style>

        <!-- Your Custom Button Style -->
        <style name="MyButtonStyle" parent="Widget.AppCompat.Button">
            <item name="android:background">@color/colorAccent</item>
            <item name="android:textColor">#FFFFFF</item>
            <!-- Add other attributes like textSize, padding, etc. -->
        </style>
    <!-- Title TextView style -->
        <style name="TitleText">
            <item name="android:textColor">@color/primary_blue_dark</item>
            <item name="android:textSize">22sp</item>
            <item name="android:textStyle">bold</item>
            <item name="android:gravity">center</item>
        </style>

        <!-- Card Text style -->
        <style name="CardText">
            <item name="android:textColor">@color/background_white</item>
            <item name="android:textSize">18sp</item>
            <item name="android:textStyle">bold</item>
            <item name="android:gravity">center</item>
        </style>

        <!-- ImageView style inside cards -->
        <style name="CardImage">
            <item name="android:scaleType">fitXY</item>
        </style>

        <!-- CardView common style (background color & corner radius) -->
        <style name="DashboardCard">
            <item name="cardCornerRadius">12dp</item>
            <item name="android:clickable">true</item>
            <item name="android:focusable">true</item>
            <item name="android:foreground">?attr/selectableItemBackground</item>
        </style>
</resources>