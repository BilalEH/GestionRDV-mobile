<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- En-tÃªte -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bonjour_dr_nom"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Date du jour -->
    <TextView
        android:id="@+id/todayDateText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/patients_du_jour"
        android:textSize="18sp"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Carte de statistiques -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

        <!-- Patients en attente -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#E3F2FD"
            android:padding="16dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_4"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/patients_en_attente"
                android:textSize="14sp"
                android:textColor="#1976D2"
                android:gravity="center" />

        </LinearLayout>

        <!-- Total consultations -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#E8F5E8"
            android:padding="16dp"
            android:layout_marginStart="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_5"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#388E3C"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/total_consultations"
                android:textSize="14sp"
                android:textColor="#388E3C"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

    <!-- Titre de la liste -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/liste_des_patients_du_jour"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <!-- Liste des patients -->
    <ListView
        android:id="@+id/patientsListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FAFAFA"
        android:padding="8dp" />

</LinearLayout>