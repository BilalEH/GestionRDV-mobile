<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/purple_500"
        android:padding="10dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_back"
            android:layout_centerVertical="true"
            app:tint="@color/white"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:id="@+id/pageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Espace Médecin"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mon Cabinet"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="30dp"
                android:gravity="center"/>

            <Button
                android:id="@+id/btnAvailability"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:text="Gérer mes disponibilités"
                android:textSize="16sp"
                android:backgroundTint="#00897B"
                android:drawableStart="@android:drawable/ic_menu_my_calendar"
                android:paddingStart="20dp"
                android:layout_marginBottom="15dp"/>

            <Button
                android:id="@+id/btnMyAppointments"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:text="Consulter mes Rendez-vous"
                android:textSize="16sp"
                android:backgroundTint="#5C6BC0"
                android:drawableStart="@android:drawable/ic_menu_agenda"
                android:paddingStart="20dp"
                android:layout_marginBottom="15dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>