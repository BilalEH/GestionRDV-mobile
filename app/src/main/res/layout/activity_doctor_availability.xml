<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/purple_500"
        android:padding="10dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_back"
            android:layout_centerVertical="true"
            app:tint="@color/white"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:id="@+id/pageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mes DisponibilitÃ©s"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cochez vos jours de travail :"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="20dp"/>

            <CheckBox
                android:id="@+id/cbLundi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lundi (09:00 - 17:00)"
                android:textSize="16sp"
                android:padding="10dp"
                android:checked="true"/>

            <CheckBox
                android:id="@+id/cbMardi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mardi (09:00 - 17:00)"
                android:textSize="16sp"
                android:padding="10dp"
                android:checked="true"/>

            <CheckBox
                android:id="@+id/cbMercredi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mercredi (09:00 - 17:00)"
                android:textSize="16sp"
                android:padding="10dp"
                android:checked="true"/>

            <CheckBox
                android:id="@+id/cbJeudi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jeudi (09:00 - 17:00)"
                android:textSize="16sp"
                android:padding="10dp"
                android:checked="true"/>

            <CheckBox
                android:id="@+id/cbVendredi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vendredi (09:00 - 12:00)"
                android:textSize="16sp"
                android:padding="10dp"
                android:checked="true"/>

            <CheckBox
                android:id="@+id/cbSamedi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Samedi (Urgences)"
                android:textSize="16sp"
                android:padding="10dp"/>

            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Enregistrer"
                android:textSize="18sp"
                android:backgroundTint="#00897B"
                android:layout_marginTop="30dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>