<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- En-tÃªte avec bouton retour -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/retour"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/g_rer_mes_disponibilit_s"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginStart="16dp" />

        </LinearLayout>

        <!-- Texte de description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/configurez_vos_jours_et_cr_neaux_horaires_de_travail"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="24dp" />

        <!-- Carte de statistiques -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#E3F2FD"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/jours_de_travail_5_7"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/total_cr_neaux_10"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#388E3C"
                android:gravity="center" />

        </LinearLayout>

        <!-- Texte de statistiques dynamique -->
        <TextView
            android:id="@+id/statsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/jours_de_travail_0_7"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Configuration des jours -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/jours_de_travail"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Lundi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F5F5F5"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <CheckBox
                android:id="@+id/day0CheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lundi"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/timeSlotContainer0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:layout_marginStart="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cr_neau_horaire"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/timeSlotSpinner0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <!-- Mardi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F5F5F5"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <CheckBox
                android:id="@+id/day1CheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mardi"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/timeSlotContainer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:layout_marginStart="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cr_neau_horaire"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/timeSlotSpinner1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <!-- Mercredi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F5F5F5"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <CheckBox
                android:id="@+id/day2CheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mercredi"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/timeSlotContainer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:layout_marginStart="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cr_neau_horaire"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/timeSlotSpinner2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <!-- Jeudi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F5F5F5"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <CheckBox
                android:id="@+id/day3CheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/jeudi"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/timeSlotContainer3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:layout_marginStart="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cr_neau_horaire"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/timeSlotSpinner3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <!-- Vendredi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F5F5F5"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <CheckBox
                android:id="@+id/day4CheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/vendredi"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/timeSlotContainer4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:layout_marginStart="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cr_neau_horaire"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/timeSlotSpinner4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <!-- Samedi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F5F5F5"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <CheckBox
                android:id="@+id/day5CheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/samedi"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/timeSlotContainer5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:layout_marginStart="24dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cr_neau_horaire"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/timeSlotSpinner5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <!-- Dimanche -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F5F5F5"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <CheckBox
                android:id="@+id/day6CheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dimanche"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/timeSlotContainer6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:layout_marginStart="24dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cr_neau_horaire"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/timeSlotSpinner6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <!-- Bouton de sauvegarde -->
        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sauvegarder_les_disponibilit_s"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="#4CAF50"
            android:textColor="#FFFFFF"
            android:padding="16dp" />

    </LinearLayout>

</ScrollView>