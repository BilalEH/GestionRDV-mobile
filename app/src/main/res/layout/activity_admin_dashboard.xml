<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/field_background"
    tools:context="com.example.gestionrdv_medical.AdminDashboardActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:id="@+id/txtTitle"
                style="@style/TitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:text="@string/act_admin_db_db" />

            <!-- History Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardHistory"
                style="@style/DashboardCard"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_margin="16dp"
                app:cardBackgroundColor="@color/primary_blue_dark">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:contentDescription="@string/act_admin_db_vh"
                        style="@style/CardImage"/>
                        <!--android:src="@drawable/ic_tree_test_background"-->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/act_admin_db_vh"
                        style="@style/CardText"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- User Management Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardUsers"
                style="@style/DashboardCard"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_margin="16dp"
                app:cardBackgroundColor="@color/primary_blue_dark">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:contentDescription="@string/act_admin_db_mu"
                        style="@style/CardImage"/>
                        <!--android:src="@drawable/ic_tree_test_background"-->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/act_admin_db_mu"
                        style="@style/CardText"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
